{
    "name": "repeatly",
    "version": "1.0.0",
    "description": "Приложение для запоминания слов",
    "main": "./src/index.ts",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc && npm run typecheck && npm run lint && npm run format:check",
        "start": "node dist/index.js",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"**/*.{ts,tsx,js,json,md,yml,yaml}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md,yml,yaml}\"",
        "validate": "npm run typecheck && npm run lint && npm run format:check"
    },
    "keywords": [],
    "author": "Koltunov Alexandr (https://github.com/Zaha250)",
    "homepage": "",
    "repository": "https://github.com/Zaha250/repeatly",
    "license": "ISC",
    "engines": {
        "node": ">=18.20.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.38.0",
        "@types/express": "^5.0.3",
        "@types/node": "^24.5.2",
        "@typescript-eslint/eslint-plugin": "^8.44.1",
        "@typescript-eslint/parser": "^8.44.1",
        "eslint": "^8.57.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.4.0",
        "jiti": "^2.6.0",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsx": "^4.20.6",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.46.2"
    },
    "dependencies": {
        "dotenv": "^17.2.2",
        "express": "^5.1.0",
        "grammy": "^1.38.2",
        "mongoose": "^8.19.2",
        "uuid": "^13.0.0",
        "winston": "^3.18.3",
        "zod": "^4.1.11"
    }
